{
    "manifest_version": 3,
    "name": "Task Notifier",
    "description": "Lembre-se de suas tarefas em horários específicos.",
    "version": "1.0",
    "action": {
      "default_popup": "popup/popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "permissions": [
      "storage",
      "notifications",
      "alarms"
    ],
    "background": {
      "service_worker": "background/background.js"
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }